<h1>Listing things</h1>

<table>
  <tr>
    <th>Short name</th>
    <th>Long name</th>
    <th>Type</th>
    <th>Thing parent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @things.each do |thing| %>
  <tr>
    <td><%= thing.short_name %></td>
    <td><%= thing.long_name %></td>
    <td><%= thing.type_id %></td>
    <td><%= thing.thing_parent_id %></td>
    <td><%= link_to 'Show', thing %></td>
    <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
    <td><%= link_to 'Destroy', thing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

