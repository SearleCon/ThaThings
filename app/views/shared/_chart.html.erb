
<h2>Visual Breakdown of your Types</h2>

<% 
	i=0 
	mydata=[]
%>

<% @typ.each do |t| %>
	<% mydata[i] = t.things.count.to_i %>
	<% i=i+1 %>
<% end %>

<div class="span11 tooltip-demo well">
	<% chart = Gchart.pie_3d(:data => mydata[0..@typ.count.to_i]) %>
	<iframe width="350" height="250" src="<%= chart %>" frameborder="0" allowfullscreen></iframe>
</div> 
